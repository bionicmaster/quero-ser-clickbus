{% extends "AcmeDemoBundle::layout.html.twig" %}

{% block title "Symfony - Agrupar por rango" %}

{% block content %}
    <h1>Inserte un arreglo de números, separados por coma</h1>
    <h3>de la siguiente forma: 10, 1, -20,  14, 99, 136, 19, 20, 117, 22, 93, 120, 131</h3>
    <br>
    <form action="{{ path('homepage') }}" method="POST" id="contact_form">
        {{ form_errors(form) }}

        {{ form_row(form.arreglo) }}
        <br>
        {{ form_row(form.rango) }}
        {{ form_rest(form) }}
        <br>
        <input type="submit" value="Send" class="symfony-button-grey" />
        <br><br><br>
    </form>

    <p>Rango            : {{ result.range_input }}</p>
    <p>Set de números   : {{ result.sorted_input }}</p>
    <p>Ordenados        : [{{ result.sorted_output }}]</p>
    <p>Agrupados        : {{ result.grouped_output }}</p>
{% endblock %}
